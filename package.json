{
  "name": "@antelopejs/database-decorators",
  "version": "0.1.0",
  "description": "A flexible ORM interface that brings database decorators for antelopejs",
  "keywords": [
    "antelopejs",
    "database",
    "decorators",
    "orm",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntelopeJS/database-decorators.git"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.6.5",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev:prepare": "cd playground && ajs module imports install",
    "dev": "ajs project run -w -p playground",
    "format": "prettier --write .",
    "generate": "ajs module exports generate",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepack": "pnpm run build",
    "prepare": "ajs module imports install",
    "release": "pnpm run lint && pnpm run test && pnpm run prepack && release-it",
    "test": "pnpm run build && ajs module test"
  },
  "antelopeJs": {
    "exportsPath": "dist/interfaces",
    "imports": [
      "core@beta",
      "database@beta",
      "api@beta"
    ],
    "importsOptional": [],
    "defaultConfig": {
      "url": "mongodb://localhost:27017"
    },
    "test": {
      "project": "src/test/antelope.test.js",
      "folder": "dist/test"
    }
  },
  "dependencies": {
    "chai": "^4.5.0",
    "mocha": "^11.7.1",
    "randomstring": "^1.3.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "rimraf": "^6.0.1",
    "@eslint/js": "^9.25.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "@types/randomstring": "^1.3.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "mongodb-memory-server-core": "^10.1.4",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "release-it": "^19.0.2",
    "release-it-changelogen": "^0.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  }
}
